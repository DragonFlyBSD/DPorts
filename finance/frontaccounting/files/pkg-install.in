#!/bin/sh
#
# $FreeBSD: head/finance/frontaccounting/files/pkg-install.in 309465 2012-12-24 21:49:21Z crees $
#
# Works around a deficiency in pkg_install; directory ownerships
# are not preserved.  This should be removed when ports-mgmt/pkg rules
# the Ports Tree.

FAWEB=%%WWWDIR%%
WWWOWN=%%WWWOWN%%
WWWGRP=%%WWWGRP%%
CHOWN=%%CHOWN%%

case $2 in
POST-INSTALL)
	if [ -e ${FAWEB} ]; then
		${CHOWN} -R ${WWWOWN}:${WWWGRP} ${FAWEB}
	fi
	;;
*)
	;;
esac
