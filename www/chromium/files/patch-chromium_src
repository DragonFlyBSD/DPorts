+/* Update cache to save syscalls in gettime. */
+void
+event_base_cachetv(struct event_base *base, struct timeval *tp)
+{
+	if (tp == NULL)
+		base->tv_cache.tv_sec = 0;
+	else
+		base->tv_cache = *tp;
+}
