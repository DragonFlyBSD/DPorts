		${WRKSRC}/src/common/iop_order.c \
		${WRKSRC}/src/common/luminance_mask.h \
		${WRKSRC}/src/iop/choleski.h \
		${WRKSRC}/src/iop/filmicrgb.c \
		${WRKSRC}/src/iop/toneequal.c
